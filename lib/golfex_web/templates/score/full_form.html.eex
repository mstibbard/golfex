<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= label f, :score, class: "label" %>
    <%= number_input f, :score, placeholder: 0 %>
    <%= error_tag f, :score %>
  </div><br>

  <div class="form-group">
    <%= label f, :points, class: "label" %>
    <%= number_input f, :points, placeholder: 0 %>
    <%= error_tag f, :points %>
  </div><br>

  <div class="form-group">
    <%= label f, :handicap_change, class: "label" %>
    <%= number_input f, :handicap_change, placeholder: 0.0, step: 0.1 %>
    <%= error_tag f, :handicap_change %>
  </div><br>

  <div class="form-group">
    <%= submit "Submit", class: "button is-primary" %>
  </div>
<% end %><br>
